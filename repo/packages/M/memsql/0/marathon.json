{
    "id": "memsql-scheduler",
    "cmd": "/sbin/my_init",
    "cpus": 1.0,
    "mem": 512.0,
    "disk": 1024.0,
    "ports": [0],
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "memsql/mesos-scheduler:latest",
            "network": "HOST",
            "forcePullImage": true
        }
    },
    "healthChecks": [
        {
            "protocol": "HTTP",
            "path": "/api/healthcheck",
            "portIndex": 0,
            "gracePeriodSeconds": 30,
            "intervalSeconds": 60,
            "timeoutSeconds": 20,
            "maxConsecutiveFailures": 1,
            "ignoreHttp1xx": false
        }
    ],
    "env": {
        "MESOS_MASTER_URL": "{{mesos/master}}"
        {{#memsql/zk}} {{! if the full memsql zk url has been specified use it }}
            ,"ZOOKEEPER_URL": "{{memsql/zk}}"
        {{/memsql/zk}}
        {{^memsql/zk}} {{! else, create a url based on convention }}
            ,"ZOOKEEPER_URL": "master.mesos:2181/memsql-mesos/"
        {{/memsql/zk}}
        ,"MESOS_AUTHENTICATE": "{{framework/authentication/enabled}}"
        {{#framework/authentication/principal}}
            ,"DEFAULT_PRINCIPAL": "{{framework/authentication/principal}}"
        {{/framework/authentication/principal}}
        {{#framework/authentication/secret}}
            ,"DEFAULT_SECRET": "{{framework/authentication/secret}}"
        {{/framework/authentication/secret}}
    }
}
